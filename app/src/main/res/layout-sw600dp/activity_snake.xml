<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#181B20">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="80sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:textColor="@color/ga_neon_blue"
        style="@style/GameArenaHeading"/>

    <FrameLayout
        android:id="@+id/pointNotificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="invisible">
        <TextView
            android:id="@+id/pointNotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1 point"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/notification_bg"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp"/>
    </FrameLayout>

    <GridLayout
        android:id="@+id/snakeGrid"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:rowCount="15"
        android:columnCount="15"
        android:background="@color/ga_card_bg"
        android:layout_gravity="center"
        android:padding="4dp">
    </GridLayout>
    <Button
        android:id="@+id/restartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:layout_marginTop="16dp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:backgroundTint="#5396FF"
        android:textSize="50sp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>
