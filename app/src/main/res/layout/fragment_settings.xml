<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/ga_bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/ga_neon_blue"
            android:layout_marginBottom="16dp"
            style="@style/GameArenaHeading"/>

        <!-- Edit Profile Section -->
        <TextView
            android:id="@+id/editProfileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="@color/ga_primary"/>
        <EditText
            android:id="@+id/nicknameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Nickname"
            android:inputType="textPersonName"/>
        <Button
            android:id="@+id/saveNicknameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Nickname"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/deleteAvatarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Avatar"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark"/>
        <Button
            android:id="@+id/resetProgressBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Progress"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark"/>

        <!-- Manage Account Section -->
        <TextView
            android:id="@+id/manageAccountHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Account"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="@color/ga_primary"/>
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            style="@style/GameArenaButton"
            android:layout_marginTop="4dp"/>
        <Button
            android:id="@+id/deleteAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark"/>

        <!-- About the App -->
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:textColor="@color/ga_text_secondary"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/creditsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by Ashot Hovhannisyan"
            android:textColor="@color/ga_text_secondary"/>

    </LinearLayout>
</ScrollView>
